#include <stdio.h>

int main(void)
{
	char line[400], *inptr, *outptr, *wordptr, c;
	int flag, found;

	fgets(line, 400, stdin);   // запоминаем введенную строку
	inptr = line;	// адрес текущего элемента входной строки
	outptr = line;	// адрес текущего элемента результирующей строки
	wordptr = line;	// адрес начала слова
	flag = 0;		// признак нахождения внутри слова
	found = 0;		// признак необходимости удалить слово

	do {
		c = *inptr;	// запоминаем текущий символ входной сроки
		
		if( c == ' ' || c == '.' || c == ',' || c == '\n' || c == '\0' )	//нашли разделитель
		{
			if(flag == 1)	// только что вышли из слова
			{
				if(found == 0)	 // слово не нужно удалять
				{
					while(wordptr < inptr)	  // повторяем пока не дойдем до конца слова
						*outptr++ = *wordptr++;	   // посимвольно копируем слово в результирующую строку
				}
				found = 0;	 // убираем признак удаления слова
			}
			*outptr++ = c;	 // записываем текущий символ в результирующую строку
			flag = 0;		 // убираем признак слова
		}
		else	// нашли букву
		{
			if (flag == 0)		// если первая буква в слове
				wordptr = inptr;	//запоминаем начало слова

			flag = 1;	// ставим признак слова
		}

		if(c == ',')	// если найдена запятая
			found = 1;	// ставим признак удаления слова

		inptr++;		// переходим на следующий символ
	} while(c != '\0');	// пока не дойдем до конца строки

	fputs(line, stdout); // выводим результирующую строку
	getchar();
	return 0;
}
