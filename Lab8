#include <stdio.h>
#define NO 0
#define YES 1
#define LINE 1000

int main(void)
{
	char buf[LINE], *in_ptr, *out_ptr, *word_ptr, *start_ptr, *end_ptr, c;
	int flag, found, num, a;

	fgets(buf, LINE, stdin);	//вводим строку
	in_ptr = buf;				//запоминаем адрес символа входной строки
	out_ptr = buf;				//запоминаем адрес символа выходной строки
	word_ptr = buf;				//запоминаем адрес начала слова
	flag = NO;					//признак слова
	found = NO;					//признак удаления слова
	num = 0;					//количество букв в слове
	a = 'A' - 'a';				//разница между строчными и заглавными буквами

	do {
		c = *in_ptr;	 //запоминаем текущий символ

		if( c >= 'a' && c <= 'z' || c >= 'A' && c <= 'Z' )	  //если найдена буква
		{
			if(flag == NO)	  //если первая буква в слове
				word_ptr = in_ptr;	  //запоминаем начало слова
			flag = YES;		//задаем признак слова
			num++;	  //увеличиваем количество букв в слове
		}
		else	 //если найден разделитель
		{
			if(flag == YES)	   //если первый разделитель после слова
			{
				start_ptr = word_ptr;	//запоминаем начало слова
				end_ptr = in_ptr - 1;	//запоминаем адрес конца слова
				num = num / 2;			//находим середину слова
				found = YES;			//задаем признак удаления слова
				
				while (num > 0)	  //пока не дойдем до середины слова
				{
					if( *start_ptr != *end_ptr && 
						*start_ptr != (*end_ptr + a) && 
						(*start_ptr + a) != *end_ptr )		//если нарушен признак палиндрома
						found = NO;	   //убираем признак удаления
					num--;	   //сдвигаемся к середине
					start_ptr++;	//передвигаем указатель первой половины	слова
					end_ptr--;		//передвигаем указатель второй половины слова
				}

				if(found == NO)	   //если слово не палиндром 
				{
					while(word_ptr < in_ptr)	//пока не конец слова
						*out_ptr++ = *word_ptr++;	 //посимвольно переносим его в выходную строку
				}

				flag = NO;	   //убираем признак слова
				num = 0;	   //обнуляем счетчик букв в слове
			}
			*out_ptr++ = c;	   //переносим в разделитель в выходную строку
		}

		in_ptr++;	//передвигаемся во входной строке на следующий символ
	} while (c != '\0');	//пока не конец строки

	fputs(buf, stdout);	   //выводим строку
	getchar();
	return 0;
}
